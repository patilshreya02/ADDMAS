<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="396dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/logo" />
    <LinearLayout
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-4dp"
        android:background="@android:color/black"
        android:gravity="right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="HELP"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="CONTACT US"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="LOGOUT"
            android:textColor="@color/blue"
            android:textSize="20dp" />


    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="570dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/c12"
            android:text="Insert Bolt - it should not be lose"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c13"
            android:text="System Pressure - It should be in Range of 25-35kg/sq-cm"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c14"
            android:text="Chuck Pressure - It should be in Range of 15-22kg/sq-cm"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c15"
            android:text="Tail Stock Pressure - It should be in Range of 5-8kg/sq-cm"
            android:textSize="25dp"
            android:layout_marginTop="20dp" />
        <CheckBox
            android:id="@+id/c16"
            android:text="Hydraulic oil Level - it should be between max-min"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c17"
            android:text="Lubricant Level - it should be between max-min"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c18"
            android:text="Coolent Level - it should be between max-min"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c19"
            android:text="Air Leakage - Should not leak"
            android:textSize="25dp"
            android:layout_marginTop="20dp"/>
        <CheckBox
            android:id="@+id/c20"
            android:text="5S - Should me maintain"
            android:textSize="25dp"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/CheckAll"
            android:layout_gravity="right"
            android:layout_height="60dp"
            android:layout_width="200dp"
            android:layout_marginBottom="20px"
            android:text="Check All"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/sub"
            android:layout_gravity="right"
            android:layout_height="60dp"
            android:layout_width="200dp"
            android:text="Submit"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </GridLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="625dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="205dp"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="User ID"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="75dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Time"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Shift"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shiftshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="75dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/oplogo" />
    </LinearLayout>

</RelativeLayout>