<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="724dp">

        <Button
            android:id="@+id/backsignup"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="0dp"
            android:background="@android:color/transparent"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/helpsignup"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="700dp"
            android:background="@android:color/transparent"
            android:text="HELP"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/contactsignup"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginStart="40dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="CONTACT US"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="315dp"
            android:background="@android:color/transparent"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="724dp" />

    </LinearLayout>



    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/addmas"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="724dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:text="Company Name : Vedika Enterprises
                                     Machine No. : C1001 "
        android:textColor="#000000"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="724dp" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="616dp"
        android:layout_marginTop="180dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Sign up"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Email ID"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/e1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Mail ID"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/e2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:hint="Enter Your full name"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/e3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter Your password"
            android:inputType="textPassword"
            android:textSize="24dp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/register"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>