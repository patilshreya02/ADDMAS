<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="396dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/logo" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="99dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/p2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-197dp"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/groupmain" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="1230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="208dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electrical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:id="@+id/c1"
            android:text="Inspect all motors to ensure they are functioning correctly."
            android:textSize="25dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:id="@+id/c2"
            android:text="Re-torque the bolting of motors and clean their surroundings."
            android:textSize="25dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:id="@+id/c3"
            android:text="Verify the proper functioning of all electromagnetic components."
            android:textSize="25dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:id="@+id/c4"
            android:text="Check and replace brushes on rotating components as needed. For instance, replace the telescopic brush of the clutch, carbon brushes of DC motors and generator"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/next1"
            android:layout_width="271dp"
            android:layout_height="97dp"
            android:background="#0500FF"
            android:text="NEXT"
            android:layout_marginStart="830dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/black"
        android:gravity="right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="HELP"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="79dp"
            android:background="@android:color/transparent"
            android:text="CONTACT US"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:text="LOGOUT"
            android:textColor="@color/blue"
            android:textSize="20dp"
            />

    </LinearLayout>




</RelativeLayout>
